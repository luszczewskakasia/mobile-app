MDScreen:
	canvas.before:
		Color:
			rgba: (1, 1, 1, 1)
		Rectangle:
			pos:  self.pos
			size: self.size
	
	BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        padding: "25dp"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size_hint: None, None
        size: "400dp", "600dp"

		MDLabel:
			id: report
			text: "Report an issue"
			font_size:  "30sp"
			halign: "center"
			size_hint_y: None
			height: self.texture_size[1]
			padding_y: dp(20)
			height: self.texture_size[1] + dp(20)



		MDTextField:
			id: name
			hint_text: "name"
			mode: "rectangle"
			size_hint_x: None
			width: "200dp"
			font_size: "10sp"
			pos_hint: {"center_x": .5, "center_y": .5}

		MDTextField:
			id: last_name
			hint_text: "last name"
			mode: "rectangle"
			size_hint_x: None
			width: "200dp"
			font_size: "10sp"
			pos_hint: {"center_x": .5, "center_y": .5}

		MDTextField:
			id: email
			hint_text: "email address"
			mode: "rectangle"
			size_hint_x: None
			width: "200dp"
			font_size: "10sp"
			pos_hint: {"center_x": .5, "center_y": .5}

		MDTextField:
			id: location
			hint_text: "location"
			mode: "rectangle"
			size_hint_x: None
			width: "200dp"
			font_size: "10sp"
			pos_hint: {"center_x": .5, "center_y": .5}

		MDTextField:
			id: description
			hint_text: "descrition"
			mode: "rectangle"
			size_hint_x: None
			width: "200dp"
			font_size: "10sp"
			pos_hint: {"center_x": .5, "center_y": .5}

		MDRectangleFlatButton:
			text: "REPORT"
			font_size: "10sp"
			pos_hint: {"center_x": .5}
			on_press: app.logger()

		MDRectangleFlatButton:
			text: "CLEAR"
			font_size: "10sp"
			pos_hint: {"center_x": .5}
			on_press: app.clear()        
