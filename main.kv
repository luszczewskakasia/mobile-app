MDScreen:
	MDCard:
		size_hint: None, None
		size: 500, 700
		pos_hint: {"center_x": .5, "center_y": .5}
		elevation: 3
		padding: 25
		spacing: 25
		orientation: "vertical"
	
		MDLabel:
			id: report
			text: "Report an issue"
			font_size:  30
			halign: "center"
			size_hint_y: None
			height: self.texture_size[1]
			padding_y: 20
    


        MDTextField:
			id: name
			hint_text: "name"
			mode: "rectangle"
			size_hint_x: None
			width: 200
			font_size: 10
			pos_hint: {"center_x": .5, "center_y": .5}

		MDTextField:
			id: last_name
			hint_text: "last name"
			mode: "rectangle"
			size_hint_x: None
			width: 200
			font_size: 10
			pos_hint: {"center_x": .5, "center_y": .5}

		MDTextField:
			id: email
			hint_text: "email address"
			mode: "rectangle"
			size_hint_x: None
			width: 200
			font_size: 10
			pos_hint: {"center_x": .5, "center_y": .5}

		MDTextField:
			id: location
			hint_text: "location"
			mode: "rectangle"
			size_hint_x: None
			width: 200
			font_size: 10
			pos_hint: {"center_x": .5, "center_y": .5}

		MDTextField:
			id: description
			hint_text: "descrition"
			mode: "rectangle"
			size_hint_x: None
			width: 200
			font_size: 10
			pos_hint: {"center_x": .5, "center_y": .5}

        MDRectangleFlatButton:
            text: "REPORT"
            font_size: 10
            pos_hint: {"center_x": .5}
            on_press: app.logger()

        MDRectangleFlatButton:
            text: "CLEAR"
            font_size: 10
            pos_hint: {"center_x": .5}
            on_press: app.clear()        
