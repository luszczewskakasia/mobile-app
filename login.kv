MDScreen:
	MDCard:
		size_hint: None, None
		size: 400, 500
		pos_hint: {"center_x": .5, "center_y": .5}
		elevation: 3
		padding: 25
		spacing: 25
		orientation: "vertical"
	
		MDLabel:
			id: welcome_label
			text: "Welcome"
			font_size:  40
			halign: "center"
			size_hint_y: None
			height: self.texture_size[1]
			padding_y: 20

		MDTextField:
			id: user
			hint_text: "username"
			mode: "rectangle"
			icon_right: "account"
			size_hint_x: None
			width: 200
			font_size: 10
			pos_hint: {"center_x": .5, "center_y": .5}

		MDTextField:
			id: password_field
			hint_text: "password"
			mode: "rectangle"
			icon_right: "eye-off"
			size_hint_x: None
			width: 200
			font_size: 10
			pos_hint: {"center_x": .5, "center_y": .5}
			password: True

		MDLabel:
			id: password_text
			text: "Show Password"
			pos_hint: {"center_x": .7, "center_y": .5}

		MDCheckbox:
			pos_hint: {"center_x": .1, "center_y": .5}
			active: False
			on_active: app.show_password(self, self.active)

			
		MDRectangleFlatButton:
			text: "LOG IN"
			font_size: 8
			pos_hint: {"center_x": .5, "center_y": .5}
			on_press: app.logger()

		