MDScreen:
	MDCard:
		size_hint: None, None
		size: 300, 400
		pos_hint: {"center_x": .5, "center_y": .5}
		elevation: 3
		padding: 25
		spacing: 25
		orientation: "vertical"
	
		MDLabel:
			id: welcome_label
			text: "Welcome"
			font_size:  40
			halign: "center"
			size_hint_y: None
			height: self.texture_size[0]
			padding_y: 15

		MDTextField:
			id: user
			hint_text: "username"
			mode: "rectangle"
			icon_right: "account"
			size_hint_x: None
			width: 200
			font_size: 10
			pos_hint: {"center_x": .5, "center_y": .5}

		MDTextField:
			id: password_field
			hint_text: "password"
			mode: "rectangle"
			icon_right: "eye-off"
			size_hint_x: None
			width: 200
			font_size: 10
			pos_hint: {"center_x": .5, "center_y": .5}
			password: True
			
		MDRectangleFlatButton:
			text: "LOG IN"
			font_size: 8
			pos_hint: {"center_x": .5, "center_y": .5}
			on_press: app.logger()

		